    <script>
        // Configuration
        const CONFIG = {
            admin: {
                username: 'Rohullah',
                password: 'Rohullah420'
            },
            sessionTimeout: 30 * 60 * 1000, // 30 minutes
            defaultData: {
                'technical-skills': [
                    { name: 'HTML/CSS', level: 95 },
                    { name: 'JavaScript', level: 92 },
                    { name: 'React.js', level: 88 },
                    { name: 'Vue.js', level: 85 },
                    { name: 'UI/UX Design', level: 90 },
                    { name: 'Responsive Design', level: 96 }
                ],
                'personal-info': [
                    { label: 'Name', value: 'Rohullah Mehri' },
                    { label: 'Email', value: 'rohullah@example.com' },
                    { label: 'Phone', value: '+93 70 123 4567' },
                    { label: 'Location', value: 'Kabul, Afghanistan' },
                    { label: 'Experience', value: '3+ Years' },
                    { label: 'Availability', value: 'Open to Work' }
                ],
                'experience': [
                    {
                        title: 'Senior Frontend Developer',
                        company: 'Tech Innovations',
                        period: '2022 - Present',
                        description: 'Leading frontend development team, implementing modern frameworks and best practices.'
                    },
                    {
                        title: 'Web Developer',
                        company: 'Digital Solutions',
                        period: '2020 - 2022',
                        description: 'Developed responsive websites and web applications for various clients.'
                    }
                ],
                portfolio: [
                    {
                        title: 'E-commerce Platform',
                        category: 'Web Application',
                        description: 'Full-featured e-commerce solution with admin dashboard and payment integration.',
                        tags: ['React', 'Node.js', 'MongoDB', 'Stripe']
                    },
                    {
                        title: 'Travel Blog',
                        category: 'Website Design',
                        description: 'Beautiful travel blog with interactive maps and photo galleries.',
                        tags: ['HTML/CSS', 'JavaScript', 'GSAP']
                    },
                    {
                        title: 'Fitness Tracker',
                        category: 'Mobile App',
                        description: 'Cross-platform fitness tracking app with workout plans and progress analytics.',
                        tags: ['React Native', 'Firebase', 'Charts']
                    }
                ]
            }
        };

        // State Management
        const state = {
            isAuthenticated: false,
            currentEditSection: null,
            currentEditField: null
        };

        // Initialize Application
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Particles
            createParticles();
            
            // Entry Screen
            const enterBtn = document.getElementById('enter-btn');
            const entryScreen = document.getElementById('entry-screen');
            
            enterBtn.addEventListener('click', function() {
                entryScreen.classList.add('hidden');
                setTimeout(() => {
                    entryScreen.style.display = 'none';
                    initializeApp();
                }, 1000);
            });
            
            // Header Scroll Effect
            window.addEventListener('scroll', function() {
                const header = document.getElementById('main-header');
                if (window.scrollY > 100) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
            
            // Mobile Menu Toggle
            document.getElementById('menu-toggle').addEventListener('click', function() {
                document.getElementById('navbar').classList.toggle('active');
            });
            
            // Close menu when clicking outside
            document.addEventListener('click', function(event) {
                const navbar = document.getElementById('navbar');
                const menuToggle = document.getElementById('menu-toggle');
                
                if (!navbar.contains(event.target) && !menuToggle.contains(event.target)) {
                    navbar.classList.remove('active');
                }
            });
            
            // Close modal when clicking outside
            document.addEventListener('click', function(event) {
                if (event.target.classList.contains('modal')) {
                    closeModal(event.target.id);
                }
            });
            
            // Escape key closes modals
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    document.querySelectorAll('.modal.active').forEach(modal => {
                        closeModal(modal.id);
                    });
                }
            });
        });

        // Initialize App
        function initializeApp() {
            checkAuthStatus();
            initializeData();
            setupNavigation();
            setupForms();
            loadPageFromHash();
        }

        // Particles Animation
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const size = Math.random() * 60 + 20;
                const x = Math.random() * 100;
                const duration = Math.random() * 20 + 10;
                const delay = Math.random() * 5;
                
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${x}%`;
                particle.style.animationDuration = `${duration}s`;
                particle.style.animationDelay = `${delay}s`;
                
                particlesContainer.appendChild(particle);
            }
        }

        // Navigation
        function setupNavigation() {
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('href').substring(1);
                    showPage(pageId);
                });
            });
            
            window.addEventListener('hashchange', loadPageFromHash);
        }

        function showPage(pageId) {
            // Update active nav link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${pageId}`) {
                    link.classList.add('active');
                }
            });
            
            // Show selected page
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            const targetPage = document.getElementById(`${pageId}-page`);
            if (targetPage) {
                targetPage.classList.add('active');
                window.location.hash = pageId;
                
                // Close mobile menu
                document.getElementById('navbar').classList.remove('active');
            }
        }

        function loadPageFromHash() {
            const hash = window.location.hash.substring(1) || 'home';
            showPage(hash);
        }

        // Data Management
        function initializeData() {
            // Initialize localStorage with default data
            Object.keys(CONFIG.defaultData).forEach(key => {
                if (!localStorage.getItem(key)) {
                    localStorage.setItem(key, JSON.stringify(CONFIG.defaultData[key]));
                }
            });
            
            // Initialize contact data
            if (!localStorage.getItem('contact')) {
                localStorage.setItem('contact', JSON.stringify({
                    email: 'rohullah@example.com',
                    phone: '+93 70 123 4567',
                    location: 'Kabul, Afghanistan'
                }));
            }
            
            // Render all data
            renderTechnicalSkills();
            renderPersonalInfo();
            renderExperience();
            renderPortfolio();
            renderContact();
        }

        function renderTechnicalSkills() {
            const skills = JSON.parse(localStorage.getItem('technical-skills')) || [];
            const container = document.getElementById('technical-skills-view');
            
            container.innerHTML = skills.map(skill => `
                <div class="skill-item">
                    <div class="skill-info">
                        <span class="skill-name">${skill.name}</span>
                        <span class="skill-percentage">${skill.level}%</span>
                    </div>
                    <div class="skill-bar">
                        <div class="skill-progress" style="width: ${skill.level}%"></div>
                    </div>
                </div>
            `).join('');
        }

        function renderPersonalInfo() {
            const info = JSON.parse(localStorage.getItem('personal-info')) || [];
            const container = document.getElementById('personal-info-view');
            
            container.innerHTML = info.map(item => `
                <div class="skill-item">
                    <div class="skill-info">
                        <span class="skill-name">${item.label}</span>
                        <span class="skill-percentage">${item.value}</span>
                    </div>
                </div>
            `).join('');
        }

        function renderExperience() {
            const experience = JSON.parse(localStorage.getItem('experience')) || [];
            const container = document.getElementById('experience-view');
            
            container.innerHTML = experience.map(exp => `
                <div class="skill-item" style="margin-bottom: 25px; padding-bottom: 20px; border-bottom: 1px solid var(--glass-border);">
                    <div class="skill-info">
                        <span class="skill-name" style="font-size: 1.1rem; color: var(--primary);">${exp.title}</span>
                        <span class="skill-percentage">${exp.company}</span>
                    </div>
                    <div style="color: var(--gray); font-size: 0.9rem; margin: 5px 0;">
                        <i class="ri-calendar-line"></i> ${exp.period}
                    </div>
                    <div style="color: var(--gray); font-size: 0.95rem; line-height: 1.6;">
                        ${exp.description}
                    </div>
                </div>
            `).join('');
        }

        function renderPortfolio() {
            const portfolio = JSON.parse(localStorage.getItem('portfolio')) || [];
            const container = document.getElementById('portfolio-grid');
            
            container.innerHTML = portfolio.map(project => `
                <div class="portfolio-item">
                    <div class="portfolio-image">
                        <img src="https://images.unsplash.com/photo-1551650975-87deedd944c3?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80" alt="${project.title}">
                    </div>
                    <div class="portfolio-content">
                        <span class="portfolio-category">${project.category}</span>
                        <h3 class="portfolio-title">${project.title}</h3>
                        <p class="portfolio-description">${project.description}</p>
                        <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-top: 15px;">
                            ${project.tags.map(tag => `
                                <span style="padding: 4px 12px; background: rgba(77, 171, 247, 0.1); border-radius: 15px; font-size: 0.85rem; color: var(--primary);">
                                    ${tag}
                                </span>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function renderContact() {
            const contact = JSON.parse(localStorage.getItem('contact')) || {};
            
            document.getElementById('email-text').textContent = contact.email || '';
            document.getElementById('phone-text').textContent = contact.phone || '';
            document.getElementById('location-text').textContent = contact.location || '';
        }

        // Form Setup
        function setupForms() {
            // Contact Form
            document.getElementById('contact-form').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const subject = document.getElementById('subject').value;
                const message = document.getElementById('message').value;
                
                if (!name || !email || !subject || !message) {
                    alert('Please fill in all fields');
                    return;
                }
                
                alert(`Thank you, ${name}! Your message has been sent. I'll get back to you soon.`);
                this.reset();
            });
            
            // Login Form
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                
                if (username === CONFIG.admin.username && password === CONFIG.admin.password) {
                    login();
                } else {
                    alert('Invalid credentials. Please try again.');
                }
            });
            
            // Portfolio Form
            document.getElementById('portfolio-form').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const portfolio = JSON.parse(localStorage.getItem('portfolio')) || [];
                
                portfolio.push({
                    title: document.getElementById('project-title').value,
                    category: document.getElementById('project-category').value,
                    description: document.getElementById('project-description').value,
                    tags: document.getElementById('project-tags').value.split(',').map(tag => tag.trim())
                });
                
                localStorage.setItem('portfolio', JSON.stringify(portfolio));
                renderPortfolio();
                closeModal('portfolio-modal');
                this.reset();
                
                alert('Project added successfully!');
            });
        }

        // Authentication
        function checkAuthStatus() {
            const authData = JSON.parse(localStorage.getItem('auth')) || {};
            
            if (authData.isAuthenticated && authData.loginTime) {
                const sessionAge = Date.now() - authData.loginTime;
                if (sessionAge < CONFIG.sessionTimeout) {
                    updateAuthUI(true);
                    state.isAuthenticated = true;
                    return true;
                }
            }
            
            updateAuthUI(false);
            state.isAuthenticated = false;
            return false;
        }

        function login() {
            const authData = {
                isAuthenticated: true,
                loginTime: Date.now(),
                username: CONFIG.admin.username
            };
            
            localStorage.setItem('auth', JSON.stringify(authData));
            state.isAuthenticated = true;
            updateAuthUI(true);
            closeModal('login-modal');
            
            // Resume editing if applicable
            if (state.currentEditSection) {
                enableEditMode(state.currentEditSection);
            } else if (state.currentEditField) {
                editField(state.currentEditField);
            }
        }

        function logout() {
            localStorage.removeItem('auth');
            state.isAuthenticated = false;
            state.currentEditSection = null;
            state.currentEditField = null;
            updateAuthUI(false);
            
            // Exit all edit modes
            document.querySelectorAll('.editable-section').forEach(section => {
                section.classList.remove('editing');
            });
        }

        function updateAuthUI(isAuthenticated) {
            const loginBtn = document.getElementById('login-btn');
            const userInfo = document.getElementById('user-info');
            
            if (isAuthenticated) {
                loginBtn.style.display = 'none';
                userInfo.style.display = 'flex';
            } else {
                loginBtn.style.display = 'flex';
                userInfo.style.display = 'none';
            }
        }

        // Edit Functions - FIXED VERSION
        function checkAuthAndEdit(sectionType) {
            if (checkAuthStatus()) {
                enableEditMode(sectionType);
            } else {
                state.currentEditSection = sectionType;
                state.currentEditField = null;
                openModal('login-modal');
            }
        }

        function checkAuthAndEditField(field) {
            if (checkAuthStatus()) {
                editField(field);
            } else {
                state.currentEditSection = null;
                state.currentEditField = field;
                openModal('login-modal');
            }
        }

        function enableEditMode(sectionType) {
            const sectionId = `${sectionType}-section`;
            const editContainerId = `${sectionType}-edit`;
            const section = document.getElementById(sectionId);
            const editContainer = document.getElementById(editContainerId);
            
            // Get data from localStorage
            const data = JSON.parse(localStorage.getItem(sectionType)) || [];
            
            // Populate edit form
            if (sectionType === 'technical-skills') {
                editContainer.innerHTML = `
                    <div class="edit-form-container" id="skills-edit-form">
                        ${data.map((skill, index) => `
                            <div class="edit-form-group" data-index="${index}">
                                <input type="text" class="form-input" value="${skill.name}" placeholder="Skill name">
                                <input type="number" class="form-input" value="${skill.level}" min="0" max="100" placeholder="Level %">
                                <button class="action-btn remove" onclick="removeSkillRow(${index})">
                                    <i class="ri-delete-bin-line"></i> Remove
                                </button>
                            </div>
                        `).join('')}
                        <div class="edit-actions">
                            <button class="action-btn add" onclick="addSkillRow()">
                                <i class="ri-add-line"></i> Add Skill
                            </button>
                            <button class="action-btn save" onclick="saveTechnicalSkills()">
                                <i class="ri-save-line"></i> Save Changes
                            </button>
                            <button class="action-btn cancel" onclick="cancelEdit('${sectionType}')">
                                <i class="ri-close-line"></i> Cancel
                            </button>
                        </div>
                    </div>
                `;
            } else if (sectionType === 'personal-info') {
                editContainer.innerHTML = `
                    <div class="edit-form-container" id="personal-info-edit-form">
                        ${data.map((item, index) => `
                            <div class="edit-form-group" data-index="${index}">
                                <input type="text" class="form-input" value="${item.label}" placeholder="Label">
                                <input type="text" class="form-input" value="${item.value}" placeholder="Value">
                                <button class="action-btn remove" onclick="removePersonalInfoRow(${index})">
                                    <i class="ri-delete-bin-line"></i> Remove
                                </button>
                            </div>
                        `).join('')}
                        <div class="edit-actions">
                            <button class="action-btn add" onclick="addPersonalInfoRow()">
                                <i class="ri-add-line"></i> Add Field
                            </button>
                            <button class="action-btn save" onclick="savePersonalInfo()">
                                <i class="ri-save-line"></i> Save Changes
                            </button>
                            <button class="action-btn cancel" onclick="cancelEdit('${sectionType}')">
                                <i class="ri-close-line"></i> Cancel
                            </button>
                        </div>
                    </div>
                `;
            } else if (sectionType === 'experience') {
                editContainer.innerHTML = `
                    <div class="edit-form-container" id="experience-edit-form">
                        ${data.map((exp, index) => `
                            <div style="margin-bottom: 20px; padding: 20px; background: rgba(255,255,255,0.03); border-radius: var(--border-radius-sm);">
                                <div class="edit-form-group">
                                    <input type="text" class="form-input" value="${exp.title}" placeholder="Job Title">
                                    <input type="text" class="form-input" value="${exp.company}" placeholder="Company">
                                </div>
                                <div class="edit-form-group">
                                    <input type="text" class="form-input" value="${exp.period}" placeholder="Period (e.g., 2022 - Present)">
                                </div>
                                <div class="edit-form-group full-width">
                                    <textarea class="form-input" placeholder="Description">${exp.description}</textarea>
                                </div>
                                <button class="action-btn remove" onclick="removeExperienceRow(${index})" style="margin-top: 10px;">
                                    <i class="ri-delete-bin-line"></i> Remove Experience
                                </button>
                            </div>
                        `).join('')}
                        <div class="edit-actions">
                            <button class="action-btn add" onclick="addExperienceRow()">
                                <i class="ri-add-line"></i> Add Experience
                            </button>
                            <button class="action-btn save" onclick="saveExperience()">
                                <i class="ri-save-line"></i> Save Changes
                            </button>
                            <button class="action-btn cancel" onclick="cancelEdit('${sectionType}')">
                                <i class="ri-close-line"></i> Cancel
                            </button>
                        </div>
                    </div>
                `;
            }
            
            // Enable edit mode
            section.classList.add('editing');
            state.currentEditSection = null;
        }

        function cancelEdit(sectionType) {
            const sectionId = `${sectionType}-section`;
            const section = document.getElementById(sectionId);
            section.classList.remove('editing');
        }

        // Technical Skills Functions
        function addSkillRow() {
            const form = document.getElementById('skills-edit-form');
            const index = form.querySelectorAll('.edit-form-group').length;
            
            const row = document.createElement('div');
            row.className = 'edit-form-group';
            row.innerHTML = `
                <input type="text" class="form-input" placeholder="Skill name">
                <input type="number" class="form-input" min="0" max="100" placeholder="Level %">
                <button class="action-btn remove" onclick="removeSkillRow(${index})">
                    <i class="ri-delete-bin-line"></i> Remove
                </button>
            `;
            
            form.insertBefore(row, form.querySelector('.edit-actions'));
        }

        function removeSkillRow(index) {
            const form = document.getElementById('skills-edit-form');
            const rows = form.querySelectorAll('.edit-form-group');
            if (rows.length > 1) {
                rows[index].remove();
                
                // Update indices for remaining rows
                form.querySelectorAll('.edit-form-group').forEach((row, newIndex) => {
                    const removeBtn = row.querySelector('.action-btn.remove');
                    if (removeBtn) {
                        removeBtn.setAttribute('onclick', `removeSkillRow(${newIndex})`);
                    }
                });
            }
        }

        function saveTechnicalSkills() {
            const form = document.getElementById('skills-edit-form');
            const rows = form.querySelectorAll('.edit-form-group:not(.edit-actions)');
            const skills = [];
            
            rows.forEach(row => {
                const inputs = row.querySelectorAll('.form-input');
                const name = inputs[0].value.trim();
                const level = parseInt(inputs[1].value);
                
                if (name && !isNaN(level)) {
                    skills.push({ name, level });
                }
            });
            
            localStorage.setItem('technical-skills', JSON.stringify(skills));
            renderTechnicalSkills();
            cancelEdit('technical-skills');
            alert('Skills saved successfully!');
        }

        // Personal Info Functions
        function addPersonalInfoRow() {
            const form = document.getElementById('personal-info-edit-form');
            const index = form.querySelectorAll('.edit-form-group').length;
            
            const row = document.createElement('div');
            row.className = 'edit-form-group';
            row.innerHTML = `
                <input type="text" class="form-input" placeholder="Label">
                <input type="text" class="form-input" placeholder="Value">
                <button class="action-btn remove" onclick="removePersonalInfoRow(${index})">
                    <i class="ri-delete-bin-line"></i> Remove
                </button>
            `;
            
            form.insertBefore(row, form.querySelector('.edit-actions'));
        }

        function removePersonalInfoRow(index) {
            const form = document.getElementById('personal-info-edit-form');
            const rows = form.querySelectorAll('.edit-form-group');
            if (rows.length > 1) {
                rows[index].remove();
                
                // Update indices for remaining rows
                form.querySelectorAll('.edit-form-group').forEach((row, newIndex) => {
                    const removeBtn = row.querySelector('.action-btn.remove');
                    if (removeBtn) {
                        removeBtn.setAttribute('onclick', `removePersonalInfoRow(${newIndex})`);
                    }
                });
            }
        }

        function savePersonalInfo() {
            const form = document.getElementById('personal-info-edit-form');
            const rows = form.querySelectorAll('.edit-form-group:not(.edit-actions)');
            const info = [];
            
            rows.forEach(row => {
                const inputs = row.querySelectorAll('.form-input');
                const label = inputs[0].value.trim();
                const value = inputs[1].value.trim();
                
                if (label && value) {
                    info.push({ label, value });
                }
            });
            
            localStorage.setItem('personal-info', JSON.stringify(info));
            renderPersonalInfo();
            cancelEdit('personal-info');
            alert('Personal info saved successfully!');
        }

        // Experience Functions
        function addExperienceRow() {
            const form = document.getElementById('experience-edit-form');
            const container = form.querySelector('.edit-form-container');
            
            const experienceBlock = document.createElement('div');
            experienceBlock.style.marginBottom = '20px';
            experienceBlock.style.padding = '20px';
            experienceBlock.style.background = 'rgba(255,255,255,0.03)';
            experienceBlock.style.borderRadius = 'var(--border-radius-sm)';
            
            experienceBlock.innerHTML = `
                <div class="edit-form-group">
                    <input type="text" class="form-input" placeholder="Job Title">
                    <input type="text" class="form-input" placeholder="Company">
                </div>
                <div class="edit-form-group">
                    <input type="text" class="form-input" placeholder="Period (e.g., 2022 - Present)">
                </div>
                <div class="edit-form-group full-width">
                    <textarea class="form-input" placeholder="Description"></textarea>
                </div>
                <button class="action-btn remove" onclick="removeExperienceRow(this)" style="margin-top: 10px;">
                    <i class="ri-delete-bin-line"></i> Remove Experience
                </button>
            `;
            
            const editActions = form.querySelector('.edit-actions');
            container.insertBefore(experienceBlock, editActions);
        }

        function removeExperienceRow(button) {
            const experienceBlock = button.closest('div[style*="margin-bottom: 20px"]');
            if (experienceBlock) {
                experienceBlock.remove();
            }
        }

        function saveExperience() {
            const form = document.getElementById('experience-edit-form');
            const experienceBlocks = form.querySelectorAll('div[style*="margin-bottom: 20px"]');
            const experience = [];
            
            experienceBlocks.forEach(block => {
                const titleInput = block.querySelector('input:nth-child(1)');
                const companyInput = block.querySelector('input:nth-child(2)');
                const periodInput = block.querySelector('.edit-form-group:nth-child(2) input');
                const descriptionInput = block.querySelector('textarea');
                
                const title = titleInput ? titleInput.value.trim() : '';
                const company = companyInput ? companyInput.value.trim() : '';
                const period = periodInput ? periodInput.value.trim() : '';
                const description = descriptionInput ? descriptionInput.value.trim() : '';
                
                if (title && company) {
                    experience.push({ title, company, period, description });
                }
            });
            
            localStorage.setItem('experience', JSON.stringify(experience));
            renderExperience();
            cancelEdit('experience');
            alert('Experience saved successfully!');
        }

        function editField(field) {
            const currentValue = document.getElementById(`${field}-text`).textContent;
            const newValue = prompt(`Edit ${field}:`, currentValue);
            
            if (newValue !== null && newValue.trim() !== '') {
                const contact = JSON.parse(localStorage.getItem('contact')) || {};
                contact[field] = newValue.trim();
                localStorage.setItem('contact', JSON.stringify(contact));
                renderContact();
                state.currentEditField = null;
            }
        }

        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = 'auto';
            
            // Reset forms
            const form = document.querySelector(`#${modalId} form`);
            if (form) {
                form.reset();
            }
            
            // Clear edit state
            if (modalId === 'login-modal') {
                state.currentEditSection = null;
                state.currentEditField = null;
            }
        }

        // Download CV
        function downloadCV() {
            const skills = JSON.parse(localStorage.getItem('technical-skills')) || [];
            const info = JSON.parse(localStorage.getItem('personal-info')) || [];
            const experience = JSON.parse(localStorage.getItem('experience')) || [];
            const contact = JSON.parse(localStorage.getItem('contact')) || {};
            
            const cvContent = `
ROHULLAH MEHRI - FRONTEND DEVELOPER
====================================

CONTACT INFORMATION
Email: ${contact.email || ''}
Phone: ${contact.phone || ''}
Location: ${contact.location || ''}

PERSONAL INFORMATION
${info.map(item => `${item.label}: ${item.value}`).join('\n')}

TECHNICAL SKILLS
${skills.map(skill => `${skill.name}: ${skill.level}%`).join('\n')}

PROFESSIONAL EXPERIENCE
${experience.map(exp => `
${exp.title}
${exp.company} | ${exp.period}
${exp.description}
`).join('\n')}

EDUCATION
Bachelor of Computer Science
Kabul University (2016-2020)

CERTIFICATIONS
 Frontend Development Certification
 React.js Specialist
 UI/UX Design Fundamentals
            `;
            
            const blob = new Blob([cvContent], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'Rohullah_Mehri_CV.txt';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            alert('CV downloaded successfully!');
        }
    </script>
</body>
</html>
